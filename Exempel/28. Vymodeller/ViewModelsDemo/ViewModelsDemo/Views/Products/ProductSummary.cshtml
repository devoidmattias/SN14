
@model ViewModelsDemo.ViewModels.ProductViewModel

<div class="well">
    <h3>
        <strong>@Html.DisplayFor(modelItem => @Model.Name)</strong>
        <span class="pull-right label label-primary">@Html.DisplayFor(modelItem => @Model.Price)</span>
    </h3>
    
    @using (Html.BeginForm("AddToCart", "Cart"))
    {
        <div class="pull-right">
            @Html.HiddenFor(x => x.ProductId)
            @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
            <input type="submit" class="btn btn-success" value="Lägg till kundvagn" />
        </div>
    }
    
    <span class="lead">@Html.DisplayFor(modelItem => @Model.Description)</span>

</div>

